/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #F4F4F4;
} 
.wrap {
  padding: 10px 10px;
  margin: 0px 10px;
  text-align: left;
}

.header {
  text-align: center;
  align-content: center;
  background-color:#32AAE1;
  height: 150px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 0.2px solid #227297;
}
.h1-header {
  color: black;
  font-size: 55rpx; 
  font-weight: bold;
  padding: 30px;
}
.desc {
  margin-top: 35rpx;
  color: #888888;
  font-size: 25rpx;
  line-height: 18px;
}